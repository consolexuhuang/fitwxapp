/* pages/course/courseScreen.wxss */

.course-screen-wrapper {
  position: relative;
  width: 100%;
  background-color: #fff;
}

.course-screen-title {
  position: fixed;
  padding-top: 40rpx;
  padding-left: 33rpx;
  width: 100%;
  font-size: 34rpx;
  color: #141414;
  background: #fff;
  z-index: 2;
}

.course-screen-scroll {
  position: absolute;
  top: 0rpx;
  width: 100%;
  background: #fff;
}

.course-screen-list {
  padding-bottom: 40rpx;
  margin-bottom: 110rpx;
}

.course-screen-item {
  padding-top: 40rpx;
}
.course-screen-item:first-child{
  padding-top:20rpx;
}

.course-screen-item-title {
  margin-left: 35rpx;
  font-size: 30rpx;
  color: #141414;
}

.course-screen-label-list {
  margin: 0 30rpx;
  display: flex;
  justify-content: space-between;
  /* justify-content: space-around; */
  flex-wrap: wrap;
}

.course-screen-label-list:after {
  content: "";
  width: 210rpx;
  display: block;
  height: 0;
}

.course-screen-label-item {
  margin-top: 20rpx;
  width: 210rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  border: 2rpx solid transparent;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #505050;
}

.course-screen-label-item-active {
  background-color: #e9e4fc;
  border: 1rpx solid #8c71ff;
}

.screen-btn-wrapper {
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 115rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 4rpx 0 rgba(240, 237, 255, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.screen-reset-btn {
  width: 195rpx;
  height: 75rpx;
  border-radius: 40rpx;
  border: 1rpx solid #979797;
  line-height: 75rpx;
  text-align: center;
  font-size: 30rpx;
  color: #6e6e6e;
}

.screen-confirm-btn {
  margin-left: 20rpx;
  width: 468rpx;
  height: 75rpx;
  border-radius: 40rpx;
  background-color: #896dff;
  line-height: 75rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}
