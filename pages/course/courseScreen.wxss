/* pages/course/courseScreen.wxss */
.course-screen-wrapper {
  width: 100%;
  height: 100vh;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.course-screen-title {
  padding-top: 40rpx;
  margin-left: 33rpx;
  font-size: 34rpx;
  color: #141414;
}

.course-screen-scroll {
  flex: 1;
  margin-top: 10rpx;
  width: 100%;
  height: 0;
}

.course-screen-list {
  padding-bottom: 40rpx;
}

.course-screen-item {
  padding-top: 40rpx;
}

.course-screen-item-title {
  margin-left: 35rpx;
  font-size: 30rpx;
  color: #141414;
}

.course-screen-label-list {
  padding-top: 5rpx;
  margin-left: 19rpx;
  display: flex;
  flex-wrap: wrap;
}

.course-screen-label-item {
  margin-top: 25rpx;
  margin-right: 13rpx;
  width: 211rpx;
  height: 50rpx;
  border-radius: 28rpx;
  background-color: #f5f5f5;
  border: 2rpx solid transparent;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  color: #505050;
}

.course-screen-label-item-active {
  background-color: #e9e4fc;
  border: 1rpx solid #8c71ff;
}

.screen-btn-wrapper {
  width: 100%;
  height: 115rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 4rpx 0 rgba(240, 237, 255, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.screen-reset-btn {
  width: 195rpx;
  height: 75rpx;
  border-radius: 40rpx;
  border: 1rpx solid #979797;
  line-height: 75rpx;
  text-align: center;
  font-size: 30rpx;
  color: #6e6e6e;
}

.screen-confirm-btn {
  margin-left: 20rpx;
  width: 468rpx;
  height: 75rpx;
  border-radius: 40rpx;
  background-color: #896dff;
  line-height: 75rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}