.redeem-code_line {
  height: 1rpx;
  width: 685rpx;
  margin: 40rpx auto 20rpx;
  background: #e9e9e9;
}

.redeem-code {
  padding: 0 34rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.redeem-code_left {
  width: 463rpx;
  height: 70rpx;
  background: rgba(240, 240, 240, 1);
  border-radius: 4rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
}

.placeholderStyle {
  color: rgba(150, 150, 150, 1);
  line-height: 70rpx;
}

.redeem-code_exchange {
  background: rgba(137, 111, 255, 1);
  border-radius: 4rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 70rpx;
  text-align: center;
  padding: 0 50rpx;
  box-sizing: border-box;
}

.coupon_module {
}

.coupom_rule {
  padding: 0 34rpx;
  box-sizing: border-box;
}

.coupom_ruleImg {
  /* width: 29rpx;
  height: 29rpx; */
  vertical-align: middle;
  margin-right: 10rpx;
  font-size: 29rpx;
  color: #896EFF
}

.coupom_ruleCont {
  font-size: 24rpx;
  font-family: SourceHanSansCN-Normal;
  font-weight: 400;
  color: rgba(128, 128, 128, 1);
  line-height: 65rpx;
}

.couponList {
  /* margin: 0 auto; */
