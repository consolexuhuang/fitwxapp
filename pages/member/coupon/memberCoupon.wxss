}

.coupon_item {
  width: 685rpx;
  height: 188rpx;
  margin: 0 auto 25rpx;
  /* margin-bottom: 25rpx; */
  position: relative;
  display: flex;
}

.coupon_item_bg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
}

.coupon_item_left {
  width: 226rpx;
  text-align: center;
  z-index: 100;
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
}

.coupon_item_left_name {
  flex: 1;
  font-size: 24rpx;
  font-family: SourceHanSansCN-Normal;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 24rpx;
  letter-spacing: 2rpx;
  margin-bottom: 5rpx;
}

.coupon_item_left_price {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  font-size: 60rpx;
  font-family: SourceHanSansCN-Normal;
  color: rgba(255, 255, 255, 1);
  height: 60rpx;
  line-height: 55rpx;
  font-weight: 500;
}

.coupon_item_left_tag {
  margin-top: 12rpx;
  margin-bottom: 34rpx;
  font-size: 24rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 24rpx;
}

.dollor {
  line-height: 28rpx;
  font-size: 28rpx;
  font-weight: normal;
}

.yuan {
  font-size: 50rpx;
  font-weight: 500;
}

.coupon_item_right {
  width: 459rpx;
  display: flex;
  padding-left: 34rpx;
  box-sizing: border-box;
  z-index: 100;
}

.coupon_item_rightBox {
  align-self: center;
  display: flex;
  flex-direction: column;
}

.coupon_item_right_head {
  display: flex;
  justify-content: space-between;
  width: 400rpx;
}

.coupon_item_right_headTitle {
  font-size: 30rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(74, 74, 74, 1);
  line-height: 45rpx;
}

.coupon_item_right_headBtn {
  border-radius: 3px;
  border: 1px solid rgba(137, 110, 255, 1);
  font-size: 24rpx;
  font-family: SourceHanSansCN-Normal;
  font-weight: 400;
  color: rgba(137, 110, 255, 1);
  line-height: 40rpx;
  padding: 0 12rpx;
  box-sizing: border-box;
}

.termofValidity {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(128, 128, 128, 1);
  line-height: 37rpx;
  margin-top: 40rpx;
}
