/* pages/member/card/memberCard.wxss */
page{
  background: #fff;
}
.myCard_moneyRecord{
  background: #fff;
  width: 100%;
  margin-bottom: 34rpx;
  /* border-bottom: 20rpx solid #FAFAFA; */
}
.myCard_moneyRecord:last-child{
  /* border-bottom: 20rpx solid #fff; */
}
.myCard_moneyRecord_title{
  padding: 0 56rpx;
  box-sizing: border-box;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(128,128,128,1);
  line-height:72rpx;
  letter-spacing:2rpx;
  position: relative;
}
.myCard_moneyRecord_title::after{
  content: '';
  position: absolute;
  border-bottom: 2rpx solid #787878;
  border-right: 2rpx solid #787878;
  width: 15rpx;
  height: 15rpx;
  transform: rotate(-45deg);
  bottom: 0;
  top: 0;
  right: 56rpx;
  margin: auto
}
.myCard_moneyRecord_cont{
  width: 690rpx;
  height: 320rpx;
  position: relative;
  margin: 0 auto;
  overflow:hidden;
  display: flex;
  flex-direction: column;
}
.myCard_moneyRecordImg{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  position: absolute;
}
.cardNameImg{
  z-index: 100;
  width: 247rpx;
  height: 37rpx;
  margin: 45rpx 0 0 40rpx;
}
.myCardBox{
  position: absolute;
  top: 86rpx;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%
}
.memberCardNumber{
  z-index: 100;
  font-size:36rpx;
  font-family:SourceHanSansCN-Normal;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:54rpx;
  letter-spacing:2rpx;
  /* margin: 86rpx 0 0 0; */
  padding-left: 40rpx;
}
.currentState{
  padding-right: 40rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
  margin-top: 40rpx;
  z-index: 100;
  display: flex;
  justify-content: space-between;  
  width: 100%;
}
.currentStateBox{

}
.currentState_title{
  font-size:22rpx;
  font-family:SourceHanSansCN-Normal;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:40rpx;
  text-align: left;
}
.currentState_momey{
  text-align: left;
  font-size:50rpx;
  font-family:ArialMT;
  color:rgba(255,255,255,1);
  line-height:69rpx;
  letter-spacing:3rpx;
}
.currentState_rechargeBox{
  text-align: right;
  align-self: flex-end
}
.currentState_recharge{
  border-radius:27rpx;
  /* border:2rpx solid rgba(255,255,255,.5); */
  background: #fff;
  font-size:28rpx;
  font-family:SourceHanSansCN-Normal;
  font-weight:400;
  color:rgba(137,94,244,1);
  line-height:60rpx;
  width: 170rpx;
  text-align: center;
  display: inline-block
}
.line{
  height: 2rpx;
  width: 690rpx;
  background: #ccc;
  margin: 30rpx auto;
}
.buyCardRecord_cont{
  width: 690rpx;
