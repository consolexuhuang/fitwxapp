/* tab -----*/
.tabBox{
  position: sticky;
  z-index: 100;
  background: #fff;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.03);

}
.tab{
  width: 100%;
  display: flex;
  position: relative;
  border-bottom: 2rpx solid rgb(233, 233, 233, .5);
}
.tabItem{
  text-align: center;
  color: #808080;
  font-size: 30rpx;
  line-height: 110rpx;
  width: 33.33%;
  position: relative;
}
.chooseItem{
  color: #896eff
}
.chooseItem2 ~.downLine{
  transform: translateX(100%);
}
.chooseItem3 ~.downLine{
  transform: translateX(200%);
}
.downLine {
  height: 2rpx;
  width: 33.33%;
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  transition: all 0.2s ease-in-out;
  /* -webkit-transition: -webkit-transform 0.2s ease-in-out;   */
}
.downLine::after{
  content: '';
  height: 100%;
  width: 30%;
  display: block;
  /* position: absolute;
  bottom: 0;
  left: 0;
  right: 0; */
  margin: 0 auto;
  background: #896eff;
  transition: all 0.2s ease-in-out;
  /* -webkit-transition: all 0.2s ease-in-out; */
}
