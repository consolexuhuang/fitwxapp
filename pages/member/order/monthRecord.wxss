/* pages/member/order/monthRecord.wxss */
page{
  background: #fff !important;
}
.mounthMoreOrder_list{
  background: #fff;
  border-radius:8rpx;
  border:1rpx solid rgba(215,215,215,1);
  width: 682rpx;
  margin: 30rpx auto
}
.mounth{
  text-align: right;
  padding-right: 47rpx;
  box-sizing: border-box;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(100,100,100,1);
  line-height:61rpx;
  position: relative;
}
.mounth::after{
  content: '';
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-bottom: 1rpx solid #646464;
  border-right: 1rpx solid #646464;
  top: 0;
  bottom: 0;
  right: 22rpx;
  margin: auto;
  transform: rotate(-45deg)
}
.train{
  display: flex;
  justify-content: space-around;
  padding-bottom: 20rpx;
}
.train_cont{
  min-width: 180rpx;
}
.train_contTitle{
  text-align: center;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(100,100,100,1);
  line-height:68rpx;
}
.train_contNum{
  text-align: center;
  font-size:40rpx;
  font-family:DINAlternate-Bold;
  font-weight:bold;
  color:rgba(137,109,255,1);
  line-height:47rpx;
}