<!--pages/member/order/orderDetail.wxml-->
<wxs src="../../../utils/util.wxs" module="util" />
<tabBar_top navbarData = '{{navbarData}}'></tabBar_top>

<view class="orderDetail_statusData fadeIn animated" style='margin-top:{{marginTopBar}}rpx'>
  <view class="orderDetail_headImgBox">

    <image bindtap='handleCoachTap' data-coachId='{{orderData.coach_ids}}' class="orderDetail_headImg" src="{{orderData.coach_head_url}}"></image>
    <image class="orderDetail_headWxTag" src="{{imgUrl}}icon/wx_logo.png" bindtap='showCoachWxCode'></image>
  </view>
  <view class="orderDetail_statusInfo">
  <view class="status-box">
  <view class="orderDetail_status">{{orderData.status__NAME}} </view>
    <view class="signIn">{{orderData.use_status__NAME}}</view>
  </view>
    
    <view class="orderDetail_titleBox">
      <view class="orderDetail_title" style="width:360rpx;">{{orderData.good_title}}</view>
      <view class="orderDetail_time fadeIn animated">与教练确认上课时间</view>
    </view>
  </view>
  
  <view class="share-tag-line"></view>
  <view class="share-tag">
  <share_tag ></share_tag>
  </view>
  
</view>

