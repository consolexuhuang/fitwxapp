  <view class="admissionCode">
    <text class="orderDetail_icon iconicon-test15 iconfont"></text>
    <text class="orderDetail_text">课时：</text>
    <view class="orderDetail_data">{{orderData.good_count}}次</view>
  </view>
  <view class="admissionCode admissionCodeNext" data-name="{{orderData.store_ids__NAME}}" data-address="{{orderData.store_address}}" data-latitude="{{orderData.store_latitude}}" data-longitude="{{orderData.store_longitude}}" bindtap="handleLocationTap">
    <text class="orderDetail_icon2 iconfont iconicon-test39"></text>
    <text class="orderDetail_text">地点：</text>
    <view class="orderDetail_data">{{orderData.store_address}}</view>
  </view>
</view>
<view class="orderPriceBox fadeIn animated">
  <view class="orderPrice">
    <view class="admissionCode2">
      <text class="orderDetail_icon iconicon-test22 iconfont"></text>
      <text class="orderDetail_text">课程价</text>
      <view class="orderDetail_payData">¥{{orderData.discount_price}}</view>
    </view>
    <view class="admissionCode2" wx:if="{{orderData.pay_type == 1 || orderData.pay_type == 4}}">
      <text class="orderDetail_icon iconcardPay iconicon-test7 iconfont"></text>
      <text class="orderDetail_text">{{orderData.pay_type == 1 ? '微信支付' : '免支付'}}</text>
      <view class="orderDetail_payData">¥{{orderData.pay_type == 1 ? orderData.pay_amount : '0'}}</view>
    </view>
    <view class="admissionCode2" wx:if="{{orderData.pay_type == 2}}">
      <text class='orderDetail_icon iconfont iconhuiyuanqiagoumai-4'></text>
      <text class="orderDetail_text">卡支付</text>
      <view class="orderDetail_payData">¥{{orderData.pay_amount}}</view>
    </view>
    <view class="admissionCode2">
      <text class='orderDetail_icon iconfont iconicon-test35'></text>
      <text class="orderDetail_text">购买时间</text>
      <view class="orderDetail_payData">{{orderData.pay_time}}</view>
    </view>
  </view>
</view>
<view class="tip">
      <text class="icon-tip iconicon-test5 iconfont"></text>
      <rich-text class="text" decode="true" nodes='{{orderData.needing_attention}}'></rich-text>
    </view>

<van-popup show='{{coachWxCodeState}}' 
           bind:close='onclose'
           class='coachWxCodepaySuccessShowStyle'>
    
    <image src='{{orderData.coach_qr_code}}' class='coachWxImg' show-menu-by-longpress data-imgSrc='{{orderData.coach_qr_code}}'></image>
    <view class='coachWxCont'>长按保存教练微信二维码</view>
</van-popup>



