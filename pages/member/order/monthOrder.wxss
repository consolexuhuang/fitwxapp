  color: #aaa;
}

.tab_content .none .txt {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #bebebe;
}
.goBottom{
  text-align: center;
  color: #aaa;
  font-size: 24rpx;
  line-height: 60rpx;
}