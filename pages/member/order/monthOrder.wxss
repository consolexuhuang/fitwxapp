/* pages/member/order/monthOrder.wxss */
.wrapper {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.myOrder{
  /* background: #fff; */
}
.myOrderNav{
  padding: 0 35rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #E9E9E9;
  background: #fff;
  position: fixed;
  top: 0;
  right: 0;
  width: 100%;
  z-index: 100;
}
.myOrderNav_item{
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(20,20,20,1);
  line-height:100rpx;
  position: relative
}
.myOrderNav_itemBottom{
  width: 50%;
  height: 4rpx;
  background: #896DFF;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.click_this{
  color: #896DFF
}
