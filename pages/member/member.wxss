/* pages/member/member.wxss */
page{
    padding-bottom: 30rpx;
    background-color:#fff;
}
.top-none-plus {
  width: 750rpx;
  color:#333333;
}

.top-none-plus .info {
  width: 690rpx;
  margin: 0rpx 30rpx 30rpx 30rpx;
  padding-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.top-none-plus .info .user {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.top-none-plus .info .user .header {
  width: 94rpx;
  height: 94rpx;
  border: 3rpx solid #8B74FF;
  border-radius: 50%;
  margin-right: 30rpx;
}

.top-none-plus .info .user .name {
  font-size: 30rpx;
}

.top-none-plus .info .getUserInfoBtn{
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.top-none-plus .cardinfo{
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 690rpx;
  height: 101rpx;
  line-height: 91rpx;
  margin:20rpx 30rpx -30rpx 30rpx;  
  font-size: 24rpx;
  color:#fff;
}
.top-none-plus .backgroundimg{
  position: absolute;
  top:0;
  left:0;
  right: 0;
  width: 690rpx;
  height: 101rpx;
  z-index: -1;
}
.top-none-plus .cardinfo .explain{
  padding-left:30rpx;
}
.top-none-plus .cardinfo .btn{
  padding-right:30rpx;
  text-decoration: underline;
}
.menu {
  width: 690rpx;
  margin:20rpx 30rpx;
  background: #fff;
  border-radius:10rpx 10rpx 10rpx 10rpx;
  box-shadow: 0 0 8rpx 0rpx rgba(179,179,179,0.3);
}

.menu .item {
  display: flex;
  flex-direction: column;
  height: 112rpx;
  margin:0 30rpx;
}
.menu .item-content{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 111rpx;
}
.menu .item-line{
  height: 1rpx;
  width: 555rpx;
  background-color: #e9e9e9;
  align-self: flex-end;
}
.menu .item:last-child .item-line{
  display: none;
}
.menu .item .name {
  font-size: 30rpx;
  color: #141414;
}

.menu .item .right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.menu .item .right .value {
  font-size: 24rpx;
  color: #787878;
}

.menu .item .right .value.blue {
  color: #8970ff;
}

.menu .item .right .icon {
  width: 22rpx;
  height: 25rpx;
  margin: 0 0 0 16rpx;
  font-size: 25rpx;
  color: #BEBEBE
}
.menu .item.contact{
  position: relative;
}
.menu .item.contact .contBtn {
  opacity: 0;
  position: absolute;
  width: 100%;
  height: 101rpx;
  left: 0;
  top: 0;
}
