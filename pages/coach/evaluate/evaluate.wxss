  letter-spacing:1rpx;
  text-align: center;
  position: relative;
}
.evaluateComfirmCont{
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(40,40,40,1);
  line-height:47rpx;
  letter-spacing:1rpx;
  /* margin-top: 30rpx; */
