/* pages/invite/invite.wxss */

.banner{
  position: relative;
  width: 100%;
  height: 670rpx;
}

.banner image{
  width: 100%;
  height: 670rpx;
}

.qrcode{
  position: absolute;
  left: 33rpx;
  bottom: 41rpx;
  display: inline-flex;
  align-items: center;
  z-index: 2;
}

.qrcode image{
  width: 106rpx;
  height: 106rpx;
}

.qrcode text{
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  text-shadow: 0 1rpx 6rpx rgba(59,37,147,1);
}

.content{
  background-color: #FFFFFF;
}

.return-course{
  margin-top: 47rpx;
  margin-left: 553rpx;
  display: inline-flex;
  align-items: center;
}

.return-course text{
  line-height: 40rpx;
  font-size: 28rpx;
  color: #505050;
}

.return-course image{
  margin-left: 10rpx;
  width: 12rpx;
  height: 20rpx;
}

.invite-btn{
  margin: 15rpx auto 0;
  display: block;
  width: 640rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #896CFF;
  line-height: 80rpx;
  text-align: center;
  font-size: 34rpx;
  color: #FFFFFF;
}

.face-invite-btn{
  margin: 30rpx auto 0;
  display: block;
  width: 640rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #FFFFFF;
  border: 1px solid #896CFF;
  line-height: 80rpx;
  text-align: center;
  font-size: 34rpx;
  color: #896CFF;
}

.total-wrapper{
  margin: 30rpx auto 0;
  width: 641rpx;
  height: 173rpx;
  border: 1px solid #DFDFDF;
  background-color: #FAFAFA;
  display: flex;
  align-items: center;
  text-align: center;
}

.total-amount{
  width: 315rpx;
}

.total-number{
  line-height: 82rpx;
  font-size: 70rpx;
  color: #505050;
}

.total-tips{
  margin-top: 6rpx;
  line-height: 33rpx;
  font-size: 24rpx;
  color: #B1B1B1;
}

.totle-line{
  width: 2rpx;
  height: 115rpx;
  background-color: #DFDFDF;
}

.total-count{
  flex: 1;
}

.invite-member-wrapper{
  margin-top: 53rpx;
  padding-bottom: 35rpx;
}

.invite-member-title{
  display: flex;
  align-items: center;
}

.invite-member-title hr{
  flex: 1;
  height: 1px;
  background-color: #DFDFDF;
}

.invite-member-count{
  margin-left: 20rpx;
  margin-right: 20rpx;
  line-height: 37rpx;
  font-size: 26rpx;
  color: #141414;
}

.invite-member-count text{
  color: #896CFF;
}

.invite-member-list{
  margin-top: 23rpx;
  width: 100%;
}

.invite-member-item{
  margin: 0 auto;
  width: 685rpx;
  height: 104rpx;
  border-bottom: 1px solid #DFDFDF;
  display: flex;
  align-items: center;
}

.invite-member-avatar{
  margin-left: 10rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.invite-member-name{
  flex: 1;
  margin-left: 18rpx;
  font-size: 24rpx;
  color: #4A4A4A;
}

.invite-member-time{
  margin-right: 11rpx;
  font-size: 24rpx;
  color: #4A4A4A;
}

.tips{
  margin-top: 40rpx;
  padding-bottom: 52rpx;
}

.tips-title{
  margin-left: 16rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  color: #323232;
}

.tips rich-text{
  margin-top: 41rpx;
  margin-left: 35rpx;
  display: block;
  line-height: 42rpx;
  font-size: 26rpx;
  color: #A0A0A0;
}

.qrcode-shade{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.8);
  z-index: 10;
}

.qrcode-content{
  margin: 315rpx auto 0;
  width: 550rpx;
  height: 600rpx;
  background-color: #FFFFFF;
  text-align: center;
}

.qrcode-tips{
  padding-top: 40rpx;
  padding-bottom: 28rpx;
  background-color: #896CFF;
  line-height: 50rpx;
  font-size: 36rpx;
  color: #FFFFFF;
}

.qrcode-content image{
  margin: 83rpx;
  width: 278rpx;
  height: 278rpx;
}
.PostImgBox{
  position: relative;
  width: 750rpx;
  height: 670rpx;
}
.sharePostBtn{
  position: absolute;
  left: 0;
  right: 0;
  bottom: -280rpx;
  margin: auto;
  width:463rpx;
  background:rgba(137,108,255,1);
  border-radius:40rpx;
  font-size:34rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:#fff;
  line-height:80rpx;
  text-align:center;
  letter-spacing:2rpx;
}
