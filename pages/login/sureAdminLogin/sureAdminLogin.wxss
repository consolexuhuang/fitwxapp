/* pages/login/sureAdminLogin/sureAdminLogin.wxss */
page{
  height: 100%
}
.sureAdminLogin{
  width: 100%;
  height: 100%;
  background:linear-gradient(180deg,rgba(77,66,139,1) 0%,rgba(47,36,72,1) 100%);
}
.sureAdminLogin_title{
  padding: 100rpx 108rpx 0;
  box-sizing: border-box;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:50rpx;
  letter-spacing:1rpx;
  text-align: center;
}
.sureAdminLogin_head{
  margin-top: 110rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sureAdminLogin_headImg{
  text-align: center;
  width: 190rpx;
  height: 190rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
  border: 2rpx solid #fff;
}
.sureAdminLogin_headName{
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:45rpx;
  letter-spacing:1rpx;
  text-align: center;
}
.sureAdminLogin_btn{
  margin-top: 179rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sureAdminLogin_currentBtn{
  width:613rpx;
  background:linear-gradient(360deg,rgba(155,133,252,1) 0%,rgba(114,87,251,1) 100%);
  border-radius:41rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:84rpx;
  text-align: center
}
.sureAdminLogin_or{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 30rpx 0;
}
.sureAdminLogin_orText{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:40rpx;
  letter-spacing:1rpx;
  margin: 0 23rpx;
}
.sureAdminLogin_orLine{
  width: 270rpx;
  height: 2rpx;
  background: #403561;
}
.sureAdminLogin_otherBtn{
  width:613rpx;
  border-radius:41rpx;
  border:1rpx solid rgba(212,212,212,1);
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:84rpx;
  text-align: center;
}