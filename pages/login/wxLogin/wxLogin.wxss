/* pages/login/wxLogin/wxLogin.wxss */
.wxLoginImg{
  width: 100%;
  height: 650rpx
}
.wxLogin_btn{
  margin-top: 179rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.wxLogin_fastBtn{
  width:613rpx;
  background:linear-gradient(360deg,rgba(155,133,252,1) 0%,rgba(114,87,251,1) 100%);
  box-shadow:0 0 16rpx 0px rgba(184,168,255,1);
  border-radius:41rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:84rpx;
  text-align: center;
}
.wxLogin_fastBtnImg{
  width: 35rpx;
  height: 30rpx;
  vertical-align: middle;
}
.wxLogin_or{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 30rpx 0;
}
.wxLogin_orLine{
  width: 270rpx;
  height: 2rpx;
  background: #E9E9E9;
}
.wxLogin_orText{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#C8C8C8;
  line-height:40rpx;
  letter-spacing:1rpx;
  margin: 0 23rpx;
}
.wxLogin_otherBtn{
  width:613rpx;
  border-radius:41rpx;
  border:1rpx solid rgba(137,111,255,1);
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#896FFF;
  line-height:84rpx;
  text-align: center;
}