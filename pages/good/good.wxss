/* pages/good/good.wxss */

.list {
  display: flex;
  flex-direction: column;
  margin: 30rpx;
}

.list .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
  /* padding: 24rpx; */
  background: #fff;
  position: relative;
}

.list .item .pic {
  width: 690rpx;
  height: 220rpx;
  border-radius: 10rpx;
}
.goodListBox{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  padding: 30rpx 40rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}
.goodTitle{
  font-size:38rpx;
  font-family:PingFangSC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:38rpx;
}
.goodInfoBox{
  display: flex;
  justify-content: space-between
}
.price{
  font-family:PingFangSC;
  color:rgba(255,255,255,1);
}
.price-current{
  font-size:36rpx;
  font-weight:600;
  line-height:60rpx;
  margin-right: 13rpx;
}
.price-original{
  font-size:20rpx;
  font-weight:400;
  line-height:30rpx;
  text-decoration: line-through
}
.btn{
  padding: 0 40rpx;
  background:rgba(255,255,255,1);
  border-radius:30rpx;
  font-size:28rpx;
  font-family:PingFangSC;
  font-weight:500;
  color:rgba(137,94,244,1);
  line-height:60rpx;
  box-sizing: border-box;
  text-align: center;
}