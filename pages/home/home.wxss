/* pages/home/home.wxss */

page {
  background: #fff;
}
.space{
  height: 15rpx;
}
.banner-swiper {
  width: 100%;
  height: 220rpx;
}

.banner-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner-item image {
  width: 690rpx;
  height: 220rpx;
  border-radius: 24rpx;
}

.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx;
}

.title .left {
  font-size: 36rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.title .right .more {
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
}

.title .right .icon {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
}

.scrollview-box {
  margin: 0 30rpx;
}

.promotion-scrollview .list {
  display: flex;
  flex-direction: row;
}

.promotion-scrollview .item {
  position: relative;
  margin: 0 20rpx 0 0;
}

.promotion-scrollview .item .pic {
  width: 335rpx;
  height: 268rpx;
  border-radius: 24rpx;
}

.promotion-scrollview .item .name {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  width: 295rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 20rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 100%);
  border-radius: 0px 0px 24rpx 24rpx;
  font-size: 30rpx;
  color: #fff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.coach-scrollview .list {
  display: flex;
  flex-direction: row;
}

.coach-scrollview .item {
  display: flex;
  flex-direction: column;
  width: 130rpx;
  margin: 0 57rpx 0 0;
}

.coach-scrollview .item .pic {
  width: 130rpx;
  height: 130rpx;
  border-radius: 20rpx;
}

.coach-scrollview .item .name {
  width: 130rpx;
  margin-top: 17rpx;
  font-size: 30rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
}

.category-list {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;  
}

.category-list .item {  
  width: 690rpx;
  height: 150rpx;
  margin:0 0 20rpx 0;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 0rpx 14rpx 0rpx rgba(235, 235, 235, 1);
  border-radius: 24rpx;
}

.category-pic {
  width: 690rpx;
  height: 150rpx;
}
