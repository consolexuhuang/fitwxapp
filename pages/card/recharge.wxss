/* pages/card/recharge.wxss */

page {
  background-color: #fff;
}
.first{

}
.first .top{
  padding-bottom: 50rpx;
  box-shadow:0rpx 5rpx 5rpx rgba(0,0,0,0.03);
  background:#fff;
}
.first .img{
  width: 750rpx;
  height: 250rpx;
}
 .balance{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: baseline;
  padding:40rpx 40rpx 0 80rpx;
  font-weight: bold;
}
.balance .label{
  font-size:36rpx;
  margin-right: 20rpx;
}
.balance .unit{
  font-size:32rpx;
}
.balance .number{
  font-size:42rpx;
}
.next .privilege-title{
  margin: 60rpx 40rpx 40rpx 40rpx;
  font-size:36rpx;
  color:#141414;
  font-weight: bold;
}
.privilege{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 25rpx 80rpx 0 80rpx;
}
.privilege .item{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.privilege .item .circle{
  width:88rpx;
height:88rpx;
background:rgba(142,116,254,0.2);
border-radius: 44rpx;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
}
.privilege .item .circle .icon{
  font-size: 45rpx;
  color:#896FFF;
}
.privilege .item .circle  .iconkecheng,
.privilege .item .circle  .iconmiandan{
  font-weight: bold;
}
.privilege .item .txt{
  margin-top:30rpx;
  font-size: 26rpx;
  color:#333;
  font-weight: bold;
}

.space-gray{
  height: 20rpx;
  background-color: #fafafa;
}
.main .list {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 40rpx 40rpx 30rpx 40rpx;
}

.main .list .item {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  width: 100%;
  height: 165rpx;
  margin-bottom:20rpx;
  background: rgba(255, 255, 255, 1);  
  box-sizing: border-box;
  box-shadow: 0px 0px 12px 0px rgba(235, 235, 235, 1);
  border-radius: 24rpx;
  
}


.main .list .item .gift {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: absolute;
  top:-2rpx;
  right: -2rpx;
}

.main .list .item .gift-bg {
  width: 150rpx;
  height: 50rpx;
  border-top-right-radius: 24rpx;
}

.main .list .item .gift .txt {
  position: absolute;
  left: 20rpx;
  width: 130rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
}

.main .list .item .info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 0 0rpx 40rpx;
  color: #141414;
}

.main .list .item  .info .number {
  margin-right: 20rpx;
  font-size: 40rpx;
}

.main .list .item  .info .txt {
  font-size:30rpx;
  color:#141414;
}
.main .list .item .sheets-list{  
margin-left:40rpx;
  display: flex;
  flex-direction: row;
}
.main .list .item  .sheets{
margin-top:18rpx;
margin-right: 30rpx;
padding:0 13rpx;
height:50rpx;
line-height: 50rpx;
background:rgba(137,111,255,0.2);
border-bottom-left-radius: 4rpx;
border-bottom-right-radius: 4rpx;
font-size:24rpx;
color:#896FFF;
text-align: center;
}
.main .list .item.active {
  border:6rpx solid rgba(137,111,255,1);
}
.main .list .item.active .gift-bg {
  width: 150rpx;
  height: 50rpx;
  border-top-right-radius: 16rpx;
}
.explain{
  margin: 20rpx 40rpx 40rpx 40rpx;
  padding:40rpx;
  margin-bottom: 168rpx;
  border-radius:24rpx;
  background: #FAFAFA;
}
.explain .warning{  
  margin-bottom:30rpx;
  font-size:26rpx;
  color:#141414;
  font-weight: bold;
}

.explain .tip{
  font-size: 22rpx;
  color:#B4B4B4;
  letter-spacing: 2rpx;
  line-height: 36rpx;
}
.explain.firstnext{
  margin-bottom: 20rpx;
}
.explain.firstnext .tip{
  color:#333333;
}
.footer{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  left:0;
  right: 0;
  height: 168rpx;
  background:linear-gradient(rgba(255,255,255,0),rgba(255,255,255,1));

}
.footer button{
 margin: 0;
  width: 613rpx;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 34rpx;
  color: #fff;
  border-radius: 41rpx;
  text-align: center;
}

.footer .btn { 
  background: linear-gradient(360deg, rgba(155, 133, 252, 1) 0%, rgba(114, 87, 251, 1) 100%);
  box-shadow: 0px 0px 16rpx 0px rgba(184, 168, 255, 1);  
}
.footer .disabled {  
  background: #C5C5C5;
}