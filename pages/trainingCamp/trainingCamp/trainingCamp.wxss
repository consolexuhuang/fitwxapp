/* ----------------弹窗 */
.coachShowStyle{
  width: 686rpx;
  height: 450rpx;
  border-radius: 8rpx;
}
.coachTitle{
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(74,74,74,1);
  line-height:110rpx;
  text-align: center;
  border-bottom: 1rpx solid #E9E9E9;
}
.coachItem{
  padding: 0 34rpx;
  box-sizing: border-box;
  display: flex;
  margin-top: 23rpx;
}
.coachItem_headImg{
  width: 115rpx;
  height: 115rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  align-self: flex-start;
  flex-shrink: 0;
}
.coachItem_info{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(74,74,74,1);
  line-height:31rpx;
  display: block;
}
.lookMore{
  position: absolute;
  width: 100%;
  height: 70rpx;
  background: linear-gradient(rgba(255, 255, 255, 0.5) 0%, #fff 64%);
  bottom: 0;
  left: 0;
  right: 0
}
.lookMore::after{
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  margin: auto;
  border-bottom: 1rpx solid #aaa;
  border-right: 1rpx solid #aaa;
  transform: rotate(45deg);
  width: 14rpx;
  height: 14rpx;
}
.footTime{
  display: flex;
  flex-direction: column;
  align-items:center;
}
.footTime_buyTime{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:56rpx;
}
.footTime_count{
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:37rpx;
  letter-spacing:1rpx;
}
.time{
  background:rgba(255,255,255,1);
  border-radius:4rpx;
  min-width: 54rpx;
  /* padding: 0 8rpx; */
  text-align: center;
  font-size:24rpx;
  font-family:Digital-7Mono;
  font-weight:normal;
  color:rgba(137,109,255,1);
  line-height: 37rpx;
  box-sizing: border-box;
  display: inline-block
}
.closeImg{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  bottom: -100rpx;
  left: 0;
  right: 0;
  margin: auto;
  font-size: 60rpx;
  color: #7A63DA
}

