.trainingCamp_stageList{
  padding-left: 32rpx;
  box-sizing: border-box;
}
.trainingCamp_stageItem{
  border-bottom: 1rpx dashed #E6E6E6;
  display: flex;
  padding: 20rpx 0;
}
.trainingCamp_stageItem:last-child{
  border-bottom: none !important;
}
.trainingCamp_stageHeadImg{
  align-self: center;
  margin-right: 27rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%
}
.trainingCamp_stageDateList{
  align-self: center;
}
.trainingCamp_stageDateItem{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(50,50,50,1);
  line-height:33rpx;
  letter-spacing:1rpx;
}
/* ----------------------cont 2 */
