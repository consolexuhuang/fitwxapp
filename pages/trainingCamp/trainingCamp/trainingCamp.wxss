  border-top: 2rpx solid #E6E6E6;
  padding: 0 16rpx;
  box-sizing: border-box;
  position: relative;
}
.trainingCamp_introductionMore{
  max-height: 400rpx;
  overflow: hidden
}
.trainingCamp_introductionCont{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(120,120,120,1);
  line-height:33rpx;
  letter-spacing:1rpx;
