/* ---------------------- cont 3 */
.trainingCamp_step{
  border-top: 1rpx solid #E6E6E6;
  padding: 0 16rpx;
  box-sizing: border-box;
}
.trainingCamp_stepBox{
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  padding: 0 40rpx;
  justify-content: space-around;
}
.trainingCamp_stepball{
  width:48rpx;
  height:48rpx;
  background:rgba(137,110,255,1);
