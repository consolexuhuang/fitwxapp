  color:rgba(100,78,195,1);
  line-height:37rpx;
}
.trainingCamp_footDisPrice{
  font-weight: bold;
  margin: 0 20rpx;
  
}
.trainingCamp_footOrgPrice{
  font-size:24rpx;
  text-decoration: line-through;
}

.trainingCamp_footBtn{
  min-width: 436rpx;
  height: 100%;
  background: #DEDEDE;
  color: #8E8E8E;
  /* box-shadow:0px 2rpx 10rpx 0rpx rgba(100,78,195,1); */
