}
/* ----------------- footer */
.trainingCamp_foot{
  position: fixed;
  height: 115rpx;
  width: 100%;
  /* background:rgba(137,109,255,1); */
  box-shadow:0px -2px 6px 0px rgba(240,237,255,1);
  bottom: 0;
  display: flex;
  justify-content: space-between;
  padding: 0 0 0 34rpx;
  box-sizing: border-box;
  align-items: center;
  z-index: 100;
  background: #fff;
}
.trainingCamp_footPrice{
  font-size:42rpx;
  font-family:PingFangSC-Regular;
