/* pages/order/order.wxss */

.wrapper {
  padding-bottom: 128rpx;
  width: 100%;
  height: 379rpx;
  background-color: #896dff;
  border-top: 1px solid transparent;
  /* overflow-x: hidden; */
}

.content {
  position: relative;
  margin: 5rpx auto 0;
  width: 687rpx;
  min-height: 374rpx;
  background-color: #fff;
  overflow-x: hidden;
}

.left-circle {
  position: absolute;
  top: 244.5rpx;
  left: -14rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background-color: #896dff;
}

.right-circle {
  position: absolute;
  top: 244.5rpx;
  right: -14rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background-color: #896dff;
}

.dashed-line {
  position: absolute;
  top: 256rpx;
  left: 29.5rpx;
  width: 628rpx;
  border-bottom: 3rpx dashed #d7d7d7;
}

.content-footer-shadow {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: calc(100% - 371rpx);
  border-radius: 4rpx;
  box-shadow: 0 3rpx 10rpx 0 rgba(240, 237, 255, 1);
  z-index: -1;
}

.course-name {
  padding-top: 35rpx;
  text-align: center;
  line-height: 50rpx;
  font-weight: 600;
  font-size: 36rpx;
  color: #141414;
}
.course-info {
  padding-top: 41rpx;
  height: 37rpx;
  display: flex;
  align-items: center;
}
.course-info.store{
  padding-top: 20rpx;
}
.course-info .label {
  margin-left: 40rpx;
  font-size: 26rpx;
  color: #787878;
}

.course-info .value {
  margin-left: 18rpx;
  font-size: 26rpx;
  color: #787878;
}

.column-list {
  margin-top: 42rpx;
}
.column-item {
  margin: 0 auto;
  width: 606rpx;
  height: 98rpx;
  border-bottom: 1rpx solid #e6e6e6;
  display: flex;
  align-items: center;
}

.column-item-label {
  flex: 1;
  font-size: 28rpx;
  color: #141414;
}


.card-price{
  margin-right: 50rpx;
  font-size: 28rpx;
  color: #9178FF;
}
.count-list {
  display: flex;
  align-items: center;
}

.count-item {
  margin-left: 30rpx;
  width: 103rpx;
  height: 40rpx;
  border-radius: 4rpx;
  background-color: #f3f3f3;
  line-height: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #787878;
  position: relative;
}
.count-item-active{
  background-color: #896EFF;
  color: #FFFFFF;
}

.tips-wrapper {
  margin-top: 20rpx;
  margin-left: 45rpx;
  width: 597rpx;
  display: flex;
  flex-direction: column;
}

.tips-label {
  width: 120rpx;
  font-size: 24rpx;
  color: #969696;
}

.tips-content {
  flex: 1;
  margin-top: 20rpx;
  padding-bottom: 25rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #969696;
}

/* -----------pay */
.pay-title {
  width: 687rpx;
  margin: 20rpx auto;
  font-size: 28rpx;
  color: #828282;
}

.pay-type {
  display: flex;
  flex-direction: column;
  background: #fff;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 0rpx 10rpx 0rpx rgba(240,237,255,1);
  border-radius:4rpx;
  width: 687rpx;
  margin:  0 auto;
}

.pay-type .item {
  display: flex;
  flex-direction: column;
}

.pay-type .item .item-play-type {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 52rpx;
  /* border-bottom: 1px solid #e9e9e9; */
}

.pay-type .item .item-play-type .icon {
  /* width: 31rpx;
  height: 24rpx; */
  font-size: 24rpx;
  color: #896EFF;
  margin-right: 20rpx;
  vertical-align: middle;
}
.pay-type .item .item-play-type .icon2 {
  color: #5BCB2A;
}
.pay-type .item .item-play-type .name {
  font-size: 28rpx;
  color: #141414;
  line-height: 66rpx;
}
.creditNone{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(137,110,255,1);
  line-height:66rpx;
  position: relative;
  padding-right: 30rpx;
}
.creditNone ::after{
  content: '';
  position: absolute;
  width: 14rpx;
  height: 14rpx;
  border-bottom: 1rpx solid #787878;
  border-right: 1rpx solid #787878;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  transform: rotate(-45deg)
}
.choosePayWayBox{
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-self: center;
  padding-left: 12rpx;
  box-sizing: border-box
}
.choosePayWay{
  width: 26rpx;
  height: 26rpx;
  align-self: center;
}

.tip {
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  padding: 20rpx 69rpx 150rpx;
  margin-top: 30rpx;
}

.icon-tip {
  /* width: 24rpx;
  height: 24rpx; */
  flex-shrink: 0;
  margin: 5rpx 24rpx 0 0;
  font-size: 24rpx;
}

.text {
  font-size: 24rpx;
  color: #787878;
}

.footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 130rpx;
  background-color: #fff;
  box-shadow: 0px -2px 4px 0px rgba(240, 237, 255, 1);
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.footer .btn{
  width:613rpx;
  /* height:84px; */
  background:linear-gradient(360deg,rgba(155,133,252,1) 0%,rgba(114,87,251,1) 100%);
  box-shadow:0px 0px 16rpx 0px rgba(184,168,255,1);
  border-radius:41rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:84rpx;
  text-align: center;
}
.cardOver{
  background: #C5C5C5 !important;
  color: #fff;
  box-shadow: none !important;
}

