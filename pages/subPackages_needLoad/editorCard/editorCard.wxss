.cardBanner{
  width:540rpx;
  height:290rpx;
  border-radius: 14rpx;
  box-shadow: 5rpx 5rpx 10rpx #DCDCDC;
  margin: 0 auto;
  display: block
}
.imgBox{
  width: 184rpx;
  height: 114rpx;
  box-shadow:0px 2rpx 8rpx 0px rgba(0,0,0,0.25);
  border-radius:14rpx;
  position: relative;
  box-sizing: border-box;
}
.chooseImgBox{
  border:3rpx solid rgba(119,211,125,1);
}
.chooseBannerImg{
  display: flex;
  padding: 0 54rpx;
  box-sizing: border-box;
  justify-content: space-between;
  margin-top: 65rpx;
}
.bannerImgItem{
  width: 100%;
  height: 100%;
  border-radius:14rpx;
}
.sureIcon{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: -20rpx;
  right: -20rpx;
  z-index: 10;
}
