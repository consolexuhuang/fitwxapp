/* pages/subPackages_needLoad/refundCardServer/refundCardServer.wxss */

.banner{
  width: 100%;
  height: 340rpx;
  position: relative
}
.bannerImg{
  width: 100%;
  height: 100%;
}
.refundCardBoxContent{
  position: absolute;
  width: 100%;
  top: 255rpx
}
.refundCardBox{
  width:686rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 7rpx 0px rgba(202,202,202,1);
  border-radius:8rpx;
  margin: 0 auto 30rpx;
  padding: 15rpx 20rpx 40rpx;
  box-sizing: border-box;
}
.refundMoney{
  padding: 0 30rpx;
  box-sizing: border-box;
  border-left: 5rpx solid #9165FF;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(50,50,50,1);
  line-height:30rpx;
  margin: 20rpx 0
}
.dollor{
  color: #9165FF;
}
.title{
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(74,74,74,1);
  line-height:42rpx;
  margin-bottom: 10rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  letter-spacing: 2rpx;
}
.textClick{
  color: #5098EE;
}
.titleSay{
  color: #828282;
}
.CardNo{
  width: 100%;
  height: 78rpx;
  padding: 0 27rpx;
  box-sizing: border-box;
  border: 2rpx solid #e9e9e9;
  background: #fff;
  font-size:30rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:#000;
}
.CardNoNone{
  border: 2rpx solid #ED9B9B;
}
.placeholderStyle{
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(191,191,191,1);
  line-height:78rpx;
}
.titleLine{
  border-bottom: 1rpx dashed #D0CFCF;
}
.chooseBox{
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 25rpx  
}
.chooseBox:last-child{
  margin-bottom: 0
}
.chooseIcon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.refundCard_cont{
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(128,128,128,1);
  line-height:45rpx;
  align-self: baseline;
  letter-spacing: 2rpx;
}
.courseStar{
  margin-right: 20rpx
}
.remark{
  padding:10rpx 20rpx;
  width: 100%;
  min-height: 137rpx;
  box-sizing: border-box;
  border: 2rpx solid #e9e9e9;
  background: #fff;
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:#000;
}
.submit_btn{
  width:613rpx;
  background:linear-gradient(360deg,rgba(155,133,252,1) 0%,rgba(114,87,251,1) 100%);
  box-shadow:0px 0px 16rpx 0px rgba(184,168,255,1);
  border-radius:41rpx;
  margin: 60rpx auto;
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:84rpx;
  text-align: center;
}