<!--components/shareMain/shareMain.wxml-->
<!-- mask -->
<view class="sharemain mask">

  <!-- card -->
  <view class="card">
    <!-- toppic -->
    <view class="toppic">
      <image class="img" src="{{cardData.pic}}"></image>
      <view class="linear-gradient"></view>
      <view class="text-box">
        <text>{{cardData.courseName}}</text>
      </view>
    </view>
    <!-- info -->
    <view class="info">
      <view class="info-row">
        <text class="icon iconfont iconicon-test35"></text>
        <text class="text">{{cardData.beginDate}}</text>
      </view>
      <view class="info-row">
        <text class="icon iconfont iconicon-test40"></text>
        <text class="text" id="address-text">{{cardData.address}}</text>
      </view>
      <view class="info-row">
        <text class="icon iconfont iconfenzu2"></text>
        <text class="text">{{cardData.coachName}}·教练</text>
      </view>
    </view>
    <!-- member -->
    <view class="member">
      <view class="left">
        <image class="header" src="{{cardData.memberHeadImg}}"></image>
        <view class="name-tip">
          <text class="name">{{cardData.memberNickName}}</text>
          <text class="tip">分享课程，长按查看</text>
        </view>
      </view>
      <image class="qrcode" src="/images/delete01.jpg"></image>
    </view>
  </view>

  <!-- footer -->
  <view class="foot">
    <view class="btn share">
      <text class="icon iconfont iconfenzucopy"></text>
      <text>发送好友</text>
    </view>
    <view class="btn download" bindtap="saveCard">
      <text class="icon iconfont iconfenzu1"></text>
      <text>保存卡片</text>
    </view>
  </view>
</view>

<!-- canvas -->
<view class="canvas-box">
  <canvas style="width:{{width}}px; height:{{height}}px;" canvas-id="cardCanvas"></canvas>
</view>