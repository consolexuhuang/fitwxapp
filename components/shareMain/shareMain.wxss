.card {
  position: fixed;  
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  width: 550rpx;
  /* height: 828rpx; */
  margin: auto;
  background: #fff;
  border-radius: 32rpx;
  z-index: 102;
}

.toppic {
  width: 550rpx;
  height: 450rpx;
  position: relative;
  border-radius: 32rpx 32rpx 60rpx 60rpx;
}

.toppic .img {
  width: 550rpx;
  height: 450rpx;
  border-radius: 32rpx 32rpx 60rpx 60rpx;
}

.toppic .linear-gradient {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  opacity: 0.8;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(14, 35, 79, 0) 41%, rgba(51, 51, 51, 1) 100%);
  border-radius: 32rpx 32rpx 60rpx 60rpx;
}
.toppic .text-box{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  position: absolute;
  bottom:40rpx;
  left: 0;
  height: 130rpx;
  padding:0 50rpx;
  font-size:36rpx;
  color:#fff;
}
 .card .info{
  margin:0 60rpx;
}
.card .info-row{
   display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-top:30rpx;
  color:#333333;
}
.card .info-row .icon{
  margin-top:10rpx;
  margin-right: 28rpx;  
  font-size:26rpx;
}
.card .info-row .text{  
  width: 100%;
  font-size:28rpx;
}
.card .member{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin:30rpx;
}
.card .member .left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.card .member .left .header{
  flex-grow: 0;
  flex-shrink: 0;
  width:84rpx;
height:84rpx;
border-radius: 50%;
margin-right: 20rpx;
}
.card .member .left .name-tip{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
color:#999999;
}
.card .member .left .name{
font-size:32rpx;
}
.card .member .left .tip{  
  margin-top:10rpx;
font-size:22rpx;
}
.card .member .qrcode{
  flex-grow: 0;
  flex-shrink: 0;
  width:88rpx;
height:88rpx;
}
.foot {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 130rpx;
  border-radius: 40rpx 40rpx 0rpx 0rpx;
  background-color: #fff;
  z-index: 102;
}

.foot:before, .foot:after {
  content: '';
  display: block;
}

.foot .btn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
  width: 315rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 0);
  border-radius: 35rpx;
  border: 1px solid rgba(153, 153, 153, 1);
  font-size: 28rpx;
}
.foot .btn .icon {
  margin-right: 21rpx;
  margin-top: 6rpx;
  font-size: 30rpx;
}
.foot .btn.share{
  position: relative;
}
.foot .btn.share .shareBtn{
  position: absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  opacity: 0;
}
.foot .btn.share .icon {
  color: #72d225;
}
.foot .btn.download .icon {
  color: #7257fb;
}
.canvas-box {
  position: fixed;
  top: 999999999999999999999rpx;
}