/* components/dialog/dialog.wxss */

.menban {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  opacity: 0.5;
  z-index: 101;
  background: #000;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dialogBox {
  position: absolute;
  border-radius: 18rpx;
  width: 580rpx;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 102;
  /* height: 270rpx; */
  padding-top: 60rpx;
  box-sizing: border-box;
  background: #fff;
  display: table
}

.dialogTitle {
  font-size: 34rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(137, 110, 255, 1);
  line-height: 48rpx;
  text-align: center;
  padding: 0 20rpx 30rpx;
  box-sizing: border-box;
}

.dialogCont {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(128, 128, 128, 1);
  line-height: 44rpx;
  text-align: center;
  padding: 0 20rpx 110rpx;
  box-sizing: border-box;
}

.dialog_footBtn {
  display: flex;
  position: absolute;
  width: 100%;
  bottom: 0;
}

.dialog_cancle {
  flex: 1;
  font-size: 34rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(191, 191, 191, 1);
  line-height: 82rpx;
  letter-spacing: 1rpx;
  text-align: center;
  background: #f9f9f9;
  border-bottom-left-radius: 18rpx;
}

.dialog_comfirm {
  flex: 1;
  font-size: 34rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: #fff;
  line-height: 82rpx;
  letter-spacing: 1rpx;
  text-align: center;
  background: #896eff;
  border-bottom-right-radius: 18rpx;
}

.dialog_comfirmOnly {
  border-bottom-left-radius: 18rpx;
}

.dialogImg {
  width: 107rpx;
  height: 107rpx;
  position: absolute;
  top: -53rpx;
  left: 0;
  right: 0;
  margin: auto;
}
