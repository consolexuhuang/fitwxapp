.guide{
  position: fixed;
  display: flex;
  width: 100%;
  align-items: center;
  bottom: 27rpx;
  flex-direction: column;
  z-index: 100;
}
.guideLogin{
  width:686rpx;
  height:120rpx;
  border-radius:12rpx;
  position: relative;
  box-shadow: 0 0 12rpx #9c8ce2;
  /* flex-direction: column; */
}
.guideLoginBg{
  width:100%;
  height:100%;
  border-radius:12rpx;
  align-self: center;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  z-index: -1
}
.guideLoginBox{
  /* position: absolute;
  right: 20rpx;
